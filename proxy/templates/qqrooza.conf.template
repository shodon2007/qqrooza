server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
	    try_files $uri $uri/ /index.html;
    }

    location /locales/ {
        alias /usr/share/nginx/html/locales/;
        add_header Access-Control-Allow-Origin *;
        autoindex off; 
    }
}
